{
  "name": "slash-or-smash",
  "version": "1.0.0",
  "description": "Hot-or-Not: Horror Edition - Live judge-only image rating show",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": ["horror", "rating", "live", "socket.io"],
  "author": "",
  "license": "Unlicense",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "better-sqlite3": "^9.2.2",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "nanoid": "^3.3.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
